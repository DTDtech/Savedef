{
  "manifest_version": 3,
  "name": "savedef",
  "version": "1.0",
  "description": "Save definitions and images of key words",
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "tabs",
    "contextMenus",
    "scripting",
    "activeTab",
    "unlimitedStorage",
    "sidePanel"
  ],
  "action": {
    "default_title": "savedef",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "dictionary_panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ]
}